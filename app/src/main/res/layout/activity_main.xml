<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
      android:id="@+id/buttonuserdevice"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="UserDevice"/>
    <Button
      android:id="@+id/buttoncreatedevice"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Create Device"/>
    <EditText
      android:id="@+id/Edittext"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextView"/>
    <Button
      android:id="@+id/buttonlive"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Start Live devices"/>
    <Button
      android:id="@+id/buttonsend"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Send message to device"/>
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
    <TextView
      android:id="@+id/pokeText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextView"/>
  </LinearLayout>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello World!"
    />

</LinearLayout>